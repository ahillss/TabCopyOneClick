{
    "manifest_version": 3,
    "version": "1.0",
    "name": "TabCopyOneClick",
    "description": "Copy tab addresses with single click",
    "background": {
        "service_worker": "background.js",
		"type": "module"
    },
	"action": {},
    "icons": { 
		"64": "/icon/icon64a.png" 
	},
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "permissions": [
        "clipboardWrite",
        "tabs",
		"offscreen"
    ]
}